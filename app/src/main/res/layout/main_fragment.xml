<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainViewModel"
            type="com.shouman.apps.weatherstation.ui.mainFragment.MainViewModel" />

        <import type="com.shouman.apps.weatherstation.utils.TempUtils" />

        <import type="com.shouman.apps.weatherstation.utils.DateUtils" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layoutDescription="@xml/main_fragment_scene"
        tools:context=".ui.mainFragment.MainFragment">

        <TextView
            android:id="@+id/timed_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@{mainViewModel.locationLiveData.localizedName}"
            android:fontFamily="@font/cairo_light"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Have a nice day" />


        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_my_location_24"
            app:layout_constraintBottom_toBottomOf="@+id/location_txt"
            app:layout_constraintEnd_toStartOf="@+id/location_txt"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/location_txt" />

        <TextView
            android:id="@+id/location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/cairo_light"
            android:padding="4dp"
            location="@{mainViewModel.locationLiveData}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/location_icon"
            app:layout_constraintTop_toBottomOf="@+id/date_txt"
            tools:text="Alexandria, Egypt" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_light"
            android:padding="0dp"
            android:text="@{DateUtils.INSTANCE.getDate(mainViewModel.todayConditionLiveData.timeStamp)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintEnd_toEndOf="@+id/timed_msg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/timed_msg"
            app:layout_constraintTop_toBottomOf="@+id/timed_msg"
            tools:text="13 August 2020" />


        <TextView
            android:id="@+id/temp_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:text="@{TempUtils.INSTANCE.getDegreeText(mainViewModel.currentConditionLiveData.temp)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/timed_msg"
            tools:text="42°" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/temp_txt"
            app:layout_constraintStart_toEndOf="@id/temp_txt"
            app:layout_constraintTop_toTopOf="@id/temp_txt">

            <TextView
                android:id="@+id/temp_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_light"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintBottom_toTopOf="@id/temp_max"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{mainViewModel.currentConditionLiveData.weatherText}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="SUUNY" />

            <TextView
                android:id="@+id/temp_max"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_light"
                android:text="@{TempUtils.INSTANCE.getMaxDegreeText(mainViewModel.todayConditionLiveData.maxTemp)}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintBottom_toTopOf="@id/temp_min"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/temp_mode"
                tools:text="45° ↑" />

            <TextView
                android:id="@+id/temp_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_light"
                android:text="@{TempUtils.INSTANCE.getMinDegreeText(mainViewModel.todayConditionLiveData.minTemp)}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/temp_max"
                tools:text="38° ↓" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>